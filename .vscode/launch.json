  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'momentor'",
      "cargo": {
        "args": [
          "build",
          "--bin=momentor",
          "--package=momentor"
        ],
        "filter": {
          "name": "momentor",
          "kind": "bin"
        }
      },
      "args": [],
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}